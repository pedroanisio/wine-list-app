<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Starts</th>
      <th>Country</th>
      <th>Color</th>
      <th>Grapes</th>
      <th>Year made</th>
      <th>Region</th>
      <th>Url</th>
      <th>String</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.starts %></td>
        <td><%= wine.country %></td>
        <td><%= wine.color %></td>
        <td><%= wine.grapes %></td>
        <td><%= wine.year_made %></td>
        <td><%= wine.region %></td>
        <td><%= wine.url %></td>
        <td><%= wine.string %></td>
        <td><%= wine.images %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

